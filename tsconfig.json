{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cubism/CubismSpec": ["src/types/cubism-shim"],
      "@cubism/*": ["src/types/cubism-shim"]
    },
    "types": ["node", "offscreencanvas"],
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "include": ["src", "scripts", "playground"],
  "exclude": ["node_modules", "lib", "build*", "./types"]
}
